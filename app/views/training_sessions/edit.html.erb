<h2> Training Session Edit Form </h2>

<%= simple_form_for @training_session, :url => url_for(:action => 'update') do |f| %>
    <h3>Trainer: <%=current_trainer.name%></h3>
    <%= f.association :client, collection: Client.all.order(:name), prompt: "Choose Client"%>
    <%= f.input :start_time, input_html: {value: @training_session.start_time} %>
    <%= f.input :end_time, input_html: {value: @training_session.end_time} %><br>
    <%= f.input :notes %>
    <%= f.button :submit %>
<% end %>